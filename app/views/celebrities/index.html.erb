<p id="notice"><%= notice %></p>

<h1>Celebrities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @celebrities.each do |celebrity| %>
      <tr>
        <td><%= celebrity.name.titleize %></td>
        <td><%= link_to 'Show', celebrity %></td>
            <% if current_user == celebrity.photos.user %>
        <td><%= link_to 'Edit', edit_celebrity_path(celebrity) %></td>
        <td><%= link_to 'Destroy', celebrity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Celebrity', new_celebrity_path %>
